<h1>Welcome Page</h1>

<!-- LOGIN PART -->
<table>
<%= form_tag(:method => "post", :action => 'process_login') do %>
	<tr>
		<td><%= label_tag(:q, "Login As:") %></td>
		<td><%= text_field_tag(:username) %></td>
	</tr>
	<tr>
		<td><%= label_tag(:q, "Password:") %></td>
		<td><%= password_field_tag(:password) %></td>
	</tr>  
	<tr>
		<td><%= submit_tag "Login" %></td>
		<td><%= submit_tag "LoginAnon" %></td>
	</tr>
<% end %>
</table>


<!-- REGISTER PART -->
<br>Register As <%= link_to 'New User', "/users/new" %>



