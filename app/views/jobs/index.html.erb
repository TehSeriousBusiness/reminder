<% @jobs.each do |job| %>
  <tr>
	<td><%= job.sender %></td>
    <td><%= job.destinations %></td>
    <td><%= job.subject %></td>
    <td><%= job.content %></td>
    <td><%= job.attachement %></td>
    <td><%= job.kickOff %></td>
    <td><%= job.repetition %></td>
    <td><%= job.delay %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

